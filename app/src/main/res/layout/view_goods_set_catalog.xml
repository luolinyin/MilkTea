<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="70px"
        android:layout_marginLeft="90px">

        <View
            android:id="@+id/v_shape"
            android:layout_width="4px"
            android:layout_height="20px"
            android:background="#44B549"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:textSize="20px"
            android:textStyle="bold"
            android:text="商品目录" />
    </TableRow>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/goods_"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="40px"
        android:layout_marginBottom="30px">

        <Button
            android:id="@+id/goods_catalog_return"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:background="@drawable/selector_goods_catalog_btn"
            android:textSize="20px"
            android:textColor="#000"
            android:text="返回"/>

        <Button
            android:id="@+id/goods_catalog_sort"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:drawableLeft="@mipmap/goods_catalog_sort"
            android:background="@drawable/selector_goods_catalog_btn"
            android:textSize="20px"
            android:textColor="#000"
            android:text="排序"/>

        <Button
            android:id="@+id/goods_catalog_new"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_goods_catalog_new_btn"
            android:textSize="20px"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="+ 新建目录"/>
    </TableRow>
</LinearLayout>