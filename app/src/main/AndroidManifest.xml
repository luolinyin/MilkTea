<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaozhi.frame.main">

    <!-- 在sd卡中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SD卡写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 网络请求权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 访问网络类型权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.xiaozhi.frame.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.xiaozhi.frame.main.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="sensorLandscape"></activity> <!--主页面-->
        <activity
            android:name="com.xiaozhi.frame.main.activity.GoodsActivity"
            android:launchMode="standard"
            android:screenOrientation="sensorLandscape"></activity> <!--商品管理页面-->
        <activity
            android:name="com.xiaozhi.frame.main.activity.GoodsDetailsActivity"
            android:launchMode="standard"
            android:screenOrientation="sensorLandscape"></activity> <!--商品详情页面-->

        <activity
            android:name="com.xiaozhi.frame.main.activity.CashierActivity"
            android:launchMode="standard"
            android:screenOrientation="sensorLandscape"></activity> <!--收银页面-->
        <activity
            android:name="com.xiaozhi.frame.main.activity.MenberActivity"
            android:launchMode="standard"
            android:screenOrientation="sensorLandscape"></activity> <!--会员页面-->

        <activity
            android:name="com.xiaozhi.frame.main.activity.ReturnGoodsActivity"
            android:launchMode="standard"
            android:screenOrientation="sensorLandscape"></activity> <!--退货页面-->
        <activity
            android:name="com.xiaozhi.frame.main.activity.SetActivity"
            android:launchMode="standard"
            android:screenOrientation="sensorLandscape"></activity> <!--设置页面-->

        <activity
            android:name="com.xiaozhi.frame.main.activity.TransferActivity"
            android:launchMode="standard"
            android:screenOrientation="sensorLandscape"></activity> <!--交接页面-->

        <activity
            android:name="com.xiaozhi.frame.main.activity.SignActivity"
            android:launchMode="singleTask"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 万能适配 -->
        <meta-data
            android:name="design_width"
            android:value="1280"></meta-data>
        <meta-data
            android:name="design_height"
            android:value="720"></meta-data>
    </application>


</manifest>